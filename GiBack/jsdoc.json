{
    "source": {
        "include": ["src"],
        "includePattern": "\\.js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "destination": "./documentation/backend",
        "recurse": true,
        "readme": "./README.md",
        "template": "node_modules/clean-jsdoc-theme"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "search": true,
        "default": {
            "outputSourceFiles": true,
            "includeDate": false
        }
    }
} 